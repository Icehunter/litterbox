{
  "name": "@icehunter/litterbox",
  "version": "3.0.0",
  "description": "> TODO: description",
  "author": "Ryan Wilson <syndicated.life@gmail.com>",
  "homepage": "https://github.com/Icehunter/litterbox#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "types": "types",
    "lib": "lib",
    "src": "src"
  },
  "files": [
    "types",
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Icehunter/litterbox.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "build": "rimraf lib && yarn build:ts && yarn build:types",
    "build:ts": "tsc",
    "build:types": "dts-bundle --name @icehunter/litterbox --main types/index.d.ts --out ../lib/index.d.ts",
    "update": "npx yarn-check -u"
  },
  "bugs": {
    "url": "https://github.com/Icehunter/litterbox/issues"
  },
  "dependencies": {
    "@hapi/hoek": "9.0.4"
  },
  "devDependencies": {
    "@types/hoek": "4.1.3",
    "@types/node": "13.9.8",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "dts-bundle": "0.7.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.1.1",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "typescript": "3.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
